}

void choixcarac (char & carac)
{
    unsigned choix;
    cout << "Joueur 1 : Choisissez votre charactère" << endl;
    cin >> choix;
    switch (choix)
    {
    case 1 :
        carac = 'X';
        break;
    case 2 :
        carac = 'O';
        break;
    case 3 :
        carac = '@';
        break;
    case 4 :
        carac = '$';
        break;
    case 5 :
        carac = '%';
        break;
    case 6 :
        carac = '+';
        break;

    }
}

void choixcarac2 (char & carac)
