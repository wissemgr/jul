#include <iostream>
#include <fstream>
#include <string>
#include <cstdlib>
#include "menu.h"

using namespace std;


void choix_couleur(string & couleur)
{

    unsigned choix;
    cout << "Joueur 1 : Choisissez votre couleur: ";
    cin >> choix;

    switch (choix)
    {
    case 1 :
        couleur = "KBlack";
        break;
    case 2 :
        couleur = "KRed";
        break;
    case 3 :
        couleur = "KGreen" ;
        break;
    case 4 :
        couleur = "KYellow" ;
        break;
    case 5 :
        couleur = "KBlue" ;
        break;
    case 6 :
        couleur = "KMagenta";
        break;
    case 7 :
        couleur = "KCyan";
        break;
    }
}
